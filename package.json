{
  "name": "nestjs-bustransit",
  "version": "0.3.1",
  "description": "Production-ready NestJS message bus with RabbitMQ, featuring Saga Pattern with persistence (MongoDB/PostgreSQL), Routing Slips orchestration, and comprehensive retry strategies for reliable distributed systems",
  "author": "nguyen2242x@gmail.com",
  "license": "MIT",
  "repository": "diepnghitinh/nestjs-bustransit",
  "main": "dist/index",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "precommit": "lint-staged",
    "prepublish:next": "npm run build",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "npm run build"
  },
  "keywords": [
    "nestjs",
    "service-bus",
    "message-bus",
    "rabbitmq",
    "saga",
    "saga-pattern",
    "routing-slips",
    "distributed-transactions",
    "microservices",
    "event-driven",
    "compensation",
    "retry-strategies",
    "mongodb",
    "postgresql",
    "state-machine",
    "orchestration",
    "choreography",
    "resilience"
  ],
  "dependencies": {
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "amqplib": "^0.10.7",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^11.1.2",
    "@types/node": "^20.3.1",
    "@types/amqplib": "^0.10.7",
    "typescript": "^5.1.3"
  }
}